<Application xmlns="https://github.com/avaloniaui"
             xmlns:vm="using:AvaloniaApp"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:v="clr-namespace:AvaloniaApp.Views.Protection"
             x:Class="AvaloniaApp.App" 
             RequestedThemeVariant="Light">
    <Application.Styles>
        <FluentTheme />
    </Application.Styles>
    <Application.DataTemplates>
      <DataTemplate DataType="{x:Type vm:ProtectionApplyViewModel}">
        <v:ProtectionApplyView />
      </DataTemplate>
      <DataTemplate DataType="{x:Type vm:ProtectionRemoveViewModel}">
        <v:ProtectionRemoveView />
      </DataTemplate>
    </Application.DataTemplates>
</Application>